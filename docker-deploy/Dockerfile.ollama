# Custom Ollama image with curl for healthchecks and auto model pull
FROM ollama/ollama:latest

# Install curl for healthcheck
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create startup script that pulls models then starts server
COPY docker-deploy/scripts/ollama-entrypoint.sh /ollama-entrypoint.sh
RUN chmod +x /ollama-entrypoint.sh

ENTRYPOINT ["/ollama-entrypoint.sh"]
